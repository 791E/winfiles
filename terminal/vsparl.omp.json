{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "transparent",
          "foreground": "#eceff4",
          "style": "diamond",
          "template": "{{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<#d08770>{{ .UserName }}</><d><#4c566a>@</></d>{{ end }}<#d08770>{{ .HostName }}</><#4c566a> \ue0b1</>",
          "type": "session"
        },
        {
          "background": "transparent",
          "foreground": "#ebcb8b",
          "style": "diamond",
          "template": " \uf0e7<#4c566a> \ue0b1</>",
          "type": "root"
        },
        {
          "background": "transparent",
          "foreground": "#eceff4",
          "properties": {
            "folder_icon": "<#81a1c1>\ue5fe </>",
            "style": "full"
          },
          "style": "diamond",
          "template": "<#ebcb8b> \ue5fe </>{{ .Path }} ",
          "type": "path"
        },
        {
          "background": "transparent",
          "foreground": "#ebcb8b",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ebcb8b{{ end }}",
            "{{ if gt .Ahead 0 }}#88c0d0{{ end }}",
            "{{ if gt .Behind 0 }}#b48ead{{ end }}"
          ],
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": "<#4c566a>\ue0b1 </>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#bf616a> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#a3be8c> \uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} (first pull, then push!) ",
          "type": "git"
        },
        {
          "background": "transparent",
          "foreground": "#eceff4",
          "style": "diamond",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "transparent",
          "foreground": "#eceff4",
          "style": "diamond",
          "type": "text"
        },
        {
          "background": "transparent",
          "foreground": "#a3be8c",
          "style": "diamond",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} (venv) {{ end }}{{ .Full }}{{ end }}<#4c566a></>",
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#4c566a",
          "style": "plain",
          "template": "~#@\u276f",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#d08770",
          "properties": {
            "style": "roundrock",
            "threshold": 0
          },
          "style": "plain",
          "template": " {{ .FormattedMs }}</>",
          "type": "executiontime"
        },
        {
          "foreground": "#a3be8c",
          "foreground_templates": ["{{ if gt .Code 0 }}#bf616a{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " \uea9f {{ .Code }} ",
          "type": "status"
        }
      ],
      "type": "rprompt"
    }
  ],
  "console_title_template": "{{if .Root}}root {{.Shell}} in {{.PWD}}",
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#d08770",
    "template": ">> "
  },
  "version": 2
}
